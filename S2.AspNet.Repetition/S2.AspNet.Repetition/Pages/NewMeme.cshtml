@page
@model S2.AspNet.Repetition.Pages.NewMemeModel
@{
    ViewData["Title"] = "NewMeme";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>NewMeme</h2>

@if (Model.MemeText != "")
{
    <div class="generatedMeme">
        <img src="@Model.SelectedImageUrl" />
        <div class="@Model.PositionOfText">
            @Model.MemeText
        </div>
    </div>
}

<a href="/">Tilbage til Memegeneratoren</a>